{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "target": "esnext",
    "strictNullChecks": false,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/**/*",
    "index.jsx",
    "declarations.d.ts"
  ],
  "exclude": ["node_modules", "metro.config.js", "babel.config.js"]
}
